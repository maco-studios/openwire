<div ow>
    <h3>Anonymous Component</h3>
    <p>This is an example of the new ow directive syntax.</p>
    <button @click="addItem">Add Item</button>
    <ul>
        <?php $items = $this->getData('items') ?: []; ?>
        <?php foreach ($items as $i => $item): ?>
            <li>
                <?php echo htmlspecialchars($item, ENT_QUOTES, 'UTF-8'); ?>
                <button @click="removeItem" data-openwire-params='[<?php echo $i ?>]'>Remove</button>
            </li>
        <?php endforeach; ?>
    </ul>
    <button @click="clear">Clear All</button>
</div>
