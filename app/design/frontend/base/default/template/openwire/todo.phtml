<div ow>
    <h3>Todo List</h3>
    <form @submit="addItem">
        <input type="text" name="item" placeholder="New item" />
        <button type="submit">Add</button>
    </form>
    <ul>
        <?php $items = $this->getData('items') ?: []; ?>
        <?php foreach ($items as $i => $it): ?>
            <li>
                <?php echo htmlspecialchars($it, ENT_QUOTES, 'UTF-8'); ?>
                <button @click="removeItem" data-openwire-params='[<?php echo $i ?>]'>Remove</button>
            </li>
        <?php endforeach; ?>
    </ul>
    <button @click="clear">Clear</button>
</div>
